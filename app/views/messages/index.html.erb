<p id="notice"><%= notice %></p>

<h1>Messages</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.body %></td>
        <td><%= message.user.name %></td>
        <td><%= link_to 'Show', room_message_path(message.room_id, message.id) %></td>
        <td><%= link_to 'Edit', edit_room_message_path(message.room_id,message.id) %></td>
        <td><%= link_to 'Destroy', room_message_path(message.room_id, message.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Message', new_room_message_path %>
